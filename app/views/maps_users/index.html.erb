<%# app/views/maps_users/index.html.erb -%>
<%-
  set_meta_tags(title: 'Maps Users')

  return_label = '&larr; Return to maps'.html_safe

  confirm_delete_user =
    'Are you sure you want to delete this map user? ' \
    'This action cannot be undone.'

  delete_user_opt =
    { method: :delete, confirm: confirm_delete_user, class: 'btn small' }

  view_debug(__FILE__)
-%>

<div class="list-heading">
  <h1 class="heading">Maps Users</h1>
  <%= print_view_link unless print_view? %>
</div>

<div class="tool-content">

  <%= link_to return_label, maps_path, class: 'maps-return' %>

  <div class="maps-container">
    <h2>
      Existing Users
      <%= link_to 'Add a new map user', new_maps_user_path, class: 'btn' %>
    </h2>
    <ul class="user-list">
      <%- @maps_users.each do |user| -%>
        <li>
          <%= user.computing_id %>
          <%= button_to 'Delete', maps_user_url(user), delete_user_opt %>
        </li>
      <%- end -%>
    </ul>
  </div>

</div>
