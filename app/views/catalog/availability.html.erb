<%# app/views/catalog/availability.html.erb -%>
<%-
  doc = document ||= @document
  return unless doc

  template_opts = { document: doc }

  view_debug(__FILE__)
-%>

<%- if in_popup? -%>

  <div class="availability-popup" role="grid">
    <h2 class="availability-header">Availability</h2>
    <div class="availability-scroller" role="article">
      <%= render 'catalog/show/shared/availability_table', template_opts %>
    </div>
  </div>

<%- else -%>

  <%= render 'catalog/show/shared/availability_table', template_opts %>

<%- end -%>
